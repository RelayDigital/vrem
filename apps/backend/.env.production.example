# ============================================
# VREM Backend - Production Environment
# Copy to .env.production and fill in values
# ============================================

# =================================
# Database (RDS Aurora PostgreSQL)
# =================================
DATABASE_URL="postgresql://vrem_user:STRONG_PASSWORD@your-cluster.cluster-xxx.us-east-1.rds.amazonaws.com:5432/vrem?schema=public"

# =================================
# Server Configuration
# =================================
NODE_ENV=production
PORT=3001

# =================================
# Authentication (Clerk)
# Get from: https://dashboard.clerk.com
# =================================
CLERK_SECRET_KEY="sk_live_xxxxx"

# =================================
# Security
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# =================================
JWT_SECRET="GENERATE_A_STRONG_RANDOM_STRING_HERE"

# =================================
# Payments (Stripe)
# Get from: https://dashboard.stripe.com/apikeys
# =================================
STRIPE_SECRET_KEY="sk_live_xxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"

# =================================
# Email (Resend)
# Get from: https://resend.com/api-keys
# =================================
RESEND_API_KEY="re_xxxxx"
EMAIL_FROM="VREM <noreply@yourdomain.com>"

# =================================
# Storage (Supabase)
# Get from: https://app.supabase.com/project/_/settings/api
# =================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="eyJxxxxx"

# =================================
# File Uploads (Uploadcare)
# Get from: https://uploadcare.com/dashboard
# =================================
UPLOADCARE_CDN_BASE="https://ucarecdn.com"

# =================================
# Calendar Integration (Nylas) - Optional
# Get from: https://dashboard.nylas.com
# =================================
NYLAS_CLIENT_ID="your-nylas-client-id"
NYLAS_API_KEY="your-nylas-api-key"
NYLAS_API_URI="https://api.us.nylas.com"
NYLAS_WEBHOOK_SECRET="your-nylas-webhook-secret"

# =================================
# URLs
# =================================
USE_PRODUCTION_URLS=true
FRONTEND_URL="https://yourdomain.com"
API_URL="https://api.yourdomain.com"
PRODUCTION_FRONTEND_URL="https://yourdomain.com"
PRODUCTION_API_URL="https://api.yourdomain.com"
