# ============================================
# VREM Frontend - Production Environment
# Set these in AWS Amplify Console
# ============================================

# =================================
# Authentication (Clerk)
# Get from: https://dashboard.clerk.com
# =================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxxxx
CLERK_SECRET_KEY=sk_live_xxxxx

# Clerk custom pages
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# =================================
# API Configuration
# =================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_USE_PRODUCTION_API=true

# =================================
# Maps (Mapbox)
# Get from: https://account.mapbox.com/access-tokens/
# =================================
NEXT_PUBLIC_MAPBOX_TOKEN=pk.xxxxx

# =================================
# File Uploads (Uploadcare)
# Get from: https://uploadcare.com/dashboard
# =================================
NEXT_PUBLIC_UPLOADCARE_PUBLIC_KEY=xxxxx

# =================================
# Optional: Google Maps (for address autocomplete)
# Get from: https://console.cloud.google.com/apis/credentials
# =================================
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=xxxxx
